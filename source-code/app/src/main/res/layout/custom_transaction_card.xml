<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    card_view:cardElevation="8dp"
    card_view:cardCornerRadius="5dp">

    <FrameLayout
        android:background="@color/colorPrimary"
        android:layout_width="6dp"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/transaction_number_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="55dp"
            android:text="[Placeholder]"
            android:textColor="@color/colorBlack"
            android:textSize="22dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            card_view:srcCompat="@drawable/ic_pause_circle_filled" />

        <TextView
            android:id="@+id/transaction_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/transaction_number_label"
            android:layout_toEndOf="@id/imageView"
            android:text="Transaction Status: Pending" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click here to view"
            android:textSize="11sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textStyle="italic"
            android:layout_below="@id/transaction_status_label"
            android:layout_toEndOf="@id/imageView"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>